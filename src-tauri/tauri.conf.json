{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "LoRA Dataset Studio",
  "version": "0.1.0",
  "identifier": "com.lora-dataset-studio.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "LoRA Dataset Studio",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "longDescription": "Prepare image datasets for AI model training (LoRA, DreamBooth). Tag, rate, and caption thousands of images with a fast, keyboard-first UI.",
    "shortDescription": "LoRA dataset preparation tool",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "resources": [],
    "externalBin": [],
    "copyright": "Copyright (c) 2026 PromptWaffle",
    "category": "DeveloperTool"
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
